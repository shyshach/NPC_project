@model PMS.Models.ProfileViewModel
<style>
    .input {
        width: 80%;
        padding: 10px;
        border-radius: 20px;
        margin-top: 30px;
    }
</style>
<h3 class="text-info text-center">Update Password</h3>
<br />
<div class="col-md-6 offset-4" style="background-color: #c7c1c1;
        height: 300px;
        padding: 36px;
        border-radius: 20px;
        text-align: center;
">
    @if (ViewBag.Message != "")
    {
        <div class="alert alert-success">
            <strong>Success!</strong> @ViewBag.Message
        </div>
    }
    <form method="post" asp-controller="Account" asp-action="ChangePassword">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input class="input" type="password" asp-for="Password" title="username" required />
       
        <br />
        <br />
        <button id="btnusername" type="submit" class="btn btn-info">Update Password</button>
    </form>
    
</div>